#!/bin/bash

service::config_set() {
  config::check_or_set $1 $2 $SERVICE_CONFIG "${@:3}"
}

check() {
  if [ "$DEBUG" = "true" ]; then
    log::info "[DEBUG][service]: $SERVICE_CONFIG"
    cat $SERVICE_CONFIG
  fi

  service::config_set SERVICE_GOMIRROR_HACK_GITLAB_PORT text "Port" 8024
  service::config_set SERVICE_GOMIRROR_HACK_GITLAB_USERNAME text "Username"
  service::config_set SERVICE_GOMIRROR_HACK_GITLAB_PASSWORD text "Password"
}

check $@
